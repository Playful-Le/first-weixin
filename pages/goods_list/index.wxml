<block wx:if="{{tabs[0].isActive}}">
        <view class="first_tab">
            <navigator wx:for="{{goods_list}}"
                       wx:key="goods_id"
                       class="goods_item"
                       u rl="/pages/goods_detail/index?goods_id={{item.goods_id}}"
                       open-type="navigate">
